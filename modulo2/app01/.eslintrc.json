{
  "parser": "babel-eslint",
  "env": {
    "es6": true
  },
  "extends": ["airbnb", "plugin:react-native/all"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__DEV__": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react-native", "jsx-a11y", "import"],
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".js", ".jsx"] }
    ],
    "import/preferer-default-export": "off",
    "global-require": "off",
    "no-console": "off",
    "react-native/sort-styles": [
      "error",
      "asc",
      { "ignoreClassNames": true, "ignoreStyleProperties": true }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": { "rootPathSuffix": "src" }
    }
  }
}
